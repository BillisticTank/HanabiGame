<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF777696"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="427dp"
        android:layout_gravity="center_vertical"
        android:background="#FFDDDDDD"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="272dp"
            android:layout_height="match_parent"
            android:background="#FFABCDEF"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:rotation="-90"
                android:src="@drawable/hanabi_card" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:rotation="-90"
                android:src="@drawable/hanabi_card" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:rotation="-90"
                android:src="@drawable/hanabi_card" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rotation="-90"
                android:src="@drawable/hanabi_card" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/centerConsole"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/terminalPane"
                android:layout_width="127dp"
                android:layout_height="299dp"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:layout_width="739dp"
                android:layout_height="87dp"
                android:layout_gravity="bottom"
                android:background="#FF999999"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/giveHintButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Give Hint" />

                <Button
                    android:id="@+id/playCardButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Play Card" />

                <Button
                    android:id="@+id/discardButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Discard Card" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="266dp"
            android:layout_height="match_parent"
            android:background="#FFABCDEF"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:rotation="90"
                android:src="@drawable/hanabi_card" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:rotation="90"
                android:src="@drawable/hanabi_card" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:rotation="90"
                android:src="@drawable/hanabi_card" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rotation="90"
                android:src="@drawable/hanabi_card" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>


