<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF777696"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="629dp"
        android:layout_gravity="center_vertical"
        android:background="#FFDDDDDD"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="272dp"
            android:layout_height="match_parent"
            android:background="#FFABCDEF"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rotation="-90"
                android:layout_weight="1"
                android:src="@drawable/hanabi_card" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rotation="-90"
                android:layout_weight="1"
                android:src="@drawable/hanabi_card" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rotation="-90"
                android:layout_weight="1"
                android:src="@drawable/hanabi_card" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rotation="-90"
                android:layout_weight="1"
                android:src="@drawable/hanabi_card" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/centerConsole"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/terminalPane"
                android:layout_width="match_parent"
                android:layout_height="375dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fuseTokens"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Fuse Tokens:"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/hints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Hints: "
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/cardsDeck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cards in Deck: "
                        android:textSize="25dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="739dp"
                android:layout_height="82dp"
                android:layout_gravity="bottom"
                android:background="#FF999999"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/giveHintButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:text="Give Hint" />

                <Button
                    android:id="@+id/playCardButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:text="Play Card" />

                <Button
                    android:id="@+id/discardButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:text="Discard Card" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/playerCardsPane"
                android:layout_width="match_parent"
                android:layout_height="174dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/playerCard1"
                    android:layout_width="match_parent"
                    android:layout_height="163dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/hanabi_player_card" />

                <ImageView
                    android:id="@+id/playerCard2"
                    android:layout_width="match_parent"
                    android:layout_height="163dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/hanabi_player_card" />

                <ImageView
                    android:id="@+id/playerCard3"
                    android:layout_width="match_parent"
                    android:layout_height="163dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/hanabi_player_card" />

                <ImageView
                    android:id="@+id/playerCard4"
                    android:layout_width="match_parent"
                    android:layout_height="163dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/hanabi_player_card" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="266dp"
            android:layout_height="match_parent"
            android:background="#FFABCDEF"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rotation="90"
                android:layout_weight="1"
                android:src="@drawable/hanabi_card" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rotation="90"
                android:layout_weight="1"
                android:src="@drawable/hanabi_card" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rotation="90"
                android:layout_weight="1"
                android:src="@drawable/hanabi_card" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rotation="90"
                android:layout_weight="1"
                android:src="@drawable/hanabi_card" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>


