<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF777696"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="629dp"
        android:layout_gravity="center_vertical"
        android:background="#FFDDDDDD"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/googleGemini"
            android:layout_width="272dp"
            android:layout_height="match_parent"
            android:background="#FFABCDEF"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Gemini1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rotation="-90"
                android:layout_weight="1"
                android:src="@drawable/hanabi_card" />

            <ImageView
                android:id="@+id/Gemini2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rotation="-90"
                android:layout_weight="1"
                android:src="@drawable/hanabi_card" />

            <ImageView
                android:id="@+id/Gemini3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rotation="-90"
                android:layout_weight="1"
                android:src="@drawable/hanabi_card" />

            <ImageView
                android:id="@+id/Gemini4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rotation="-90"
                android:layout_weight="1"
                android:src="@drawable/hanabi_card" />
            <ImageView
                android:id="@+id/Gemini5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rotation="-90"
                android:layout_weight="1"
                android:src="@drawable/hanabi_card" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/centerConsole"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/terminalPane"
                android:layout_width="match_parent"
                android:layout_height="377dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/gameStaticInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fuseTokens"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Fuse Tokens:"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/hints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Hints: "
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/cardsDeck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cards in Deck: "
                        android:textSize="25dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/gamePlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/moves"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="What Happened in the Game!"
                        android:textAlignment="center"
                        android:textSize="20dp"
                      />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/playedCardsPane"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/Red"
                        android:background="#30FF0000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Blue"
                        android:background="#AAABCDEF"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/White"
                        android:background="#FFFFFFFF"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Yellow"
                        android:background="#30FFFF00"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Green"
                        android:background="#3000FF00"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttonsPane"
                android:layout_width="739dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#FF999999"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/giveHintButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:text="Give Hint" />

                <Button
                    android:id="@+id/playCardButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:text="Play Card" />

                <Button
                    android:id="@+id/discardButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:text="Discard Card" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/playerCardsPane"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/playerCard1"
                    android:layout_width="match_parent"
                    android:layout_height="163dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/hanabi_player_card" />

                <ImageView
                    android:id="@+id/playerCard2"
                    android:layout_width="match_parent"
                    android:layout_height="163dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/hanabi_player_card" />

                <ImageView
                    android:id="@+id/playerCard3"
                    android:layout_width="match_parent"
                    android:layout_height="163dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/hanabi_player_card" />

                <ImageView
                    android:id="@+id/playerCard4"
                    android:layout_width="match_parent"
                    android:layout_height="163dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/hanabi_player_card" />

                <ImageView
                    android:id="@+id/playerCard5"
                    android:layout_width="match_parent"
                    android:layout_height="163dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/hanabi_player_card" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ChatGPT"
            android:layout_width="266dp"
            android:layout_height="match_parent"
            android:background="#FFABCDEF"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/GPT1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rotation="90"
                android:layout_weight="1"
                android:src="@drawable/hanabi_card" />

            <ImageView
                android:id="@+id/GPT2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rotation="90"
                android:layout_weight="1"
                android:src="@drawable/hanabi_card" />

            <ImageView
                android:id="@+id/GPT3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rotation="90"
                android:layout_weight="1"
                android:src="@drawable/hanabi_card" />

            <ImageView
                android:id="@+id/GPT4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rotation="90"
                android:layout_weight="1"
                android:src="@drawable/hanabi_card" />
            <ImageView
                android:id="@+id/GPT5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rotation="90"
                android:layout_weight="1"
                android:src="@drawable/hanabi_card" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>


